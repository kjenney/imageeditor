# AWS Region
aws_region = "us-east-1"

# Environment (dev, staging, prod)
environment = "dev"

# Project name
project_name = "imageeditor"

# VPC CIDR
vpc_cidr = "10.0.0.0/16"

# Public subnet CIDRs
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]

# EC2 instance type
instance_type = "t3.micro"

# SSH key pair name (optional - leave as null if not using SSH)
key_name = null

# CIDR blocks allowed to SSH (only needed if key_name is set)
# Example: ["1.2.3.4/32", "10.0.0.0/8"]
allowed_ssh_cidrs = []

# Application port (default: 80)
app_port = 80

# ========================================
# Qwen Model Configuration (Optional)
# ========================================

# Enable Qwen model support via Ollama
# When enabled, Ollama will be installed and the specified Qwen model will be downloaded
enable_qwen = false

# Qwen model to install
# Available models:
#   - qwen2.5:0.5b  (~400MB, minimal resources)
#   - qwen2.5:1.5b  (~1GB, light usage)
#   - qwen2.5:3b    (~2GB, moderate usage)
#   - qwen2.5:7b    (~4.5GB, recommended for most use cases)
#   - qwen2.5:14b   (~9GB, high performance)
#   - qwen2.5:32b   (~19GB, requires significant resources)
qwen_model = "qwen2.5:7b"

# Port for Ollama API server
ollama_port = 11434

# EBS volume size when Qwen is enabled (in GB)
# Larger models require more storage
qwen_storage_size = 50
